@{
    ViewData["Title"] = "Home Page";
}

<style>
    

    /* Bottom left text */
    .cincinnati {
          position: absolute;
          bottom: 800px;
          left: 500px;
          z-index: 2;
          font-size: 40px;
          font-family: 'Copperplate Gothic';
          font-weight: bold;
    
    }

    /* Top left text */
    .queen {
          position: absolute;
          top: 500px;
          left: 56px;
          z-index: 2;
          align-content: center;
          text-align: center;
    }

   

</style>
<div class="container">
    <div class="mt-4 p-5 pb-3 bg-danger text-white rounded text-center">
        <h1 class="font-weight-bold jumboTitle">Home</h1>
