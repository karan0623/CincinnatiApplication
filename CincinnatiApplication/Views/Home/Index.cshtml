        <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
        <script>
            var typed = new Typed(".auto-type", {
                strings: ["Cincinnati's Employees", "Us", "parts of the Cincinnati Economy", "Cincinnati Tourist Attractions"],
                typeSpeed: 80,
                backSpeed: 80,
                loop: true
            })
        </script>

    </div>


    <br />

    

    <div class="row">
        <div class="col-md-12">
            <img style='width:100%; height:100%; margin-right:10px;' src="~/css/homePageImages/cincinnati_image2.jpg" />
            <div class="cincinnati">Cincinnati</div>
            <div class="queen">The Queen City</div>
          
        </div>
   </div>

</div>
   

    
   
         

      
