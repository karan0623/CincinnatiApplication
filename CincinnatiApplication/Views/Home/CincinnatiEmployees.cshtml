@{
    ViewData["Title"] = "Cincinnati Employees";
    var welcomes = (CincinnatiApplication.Models.Employee[]) ViewData["Welcome"];
}




<div class="container">
    <div class="mt-4 p-5 pb-3 bg-danger text-white rounded text-center">
        <h1 class="font-weight-bold jumboTitle">Cincinnati Employees</h1>
        <p>This is the Cincinnati employees page.On this page we used an API from the city of Cincinnati data page which has API's which constantly update the information on there which allows our web application to update data in real time. This page displays information about 
            Employees in the City of Cincinnati.'</p>

    </div>
    <table class="table table-dark table-hover text-center">
        <hr/>
        <tr class="h4"><th>Name</th><th>Sex</th><th>Race</th><th>Business Title</th><th>Job Title</th><th>Age Range</th><th>Standard Hours</th><th>Hire Date</th></tr>
        @{
            foreach (CincinnatiApplication.Models.Employee welcome in welcomes)
            {
                 <tr>
                    <td>@welcome.Name</td>
                    <td>@welcome.Sex</td>
                    <td>@welcome.Race</td>
                    <td>@welcome.BusinessTitle</td>
                    <td>@welcome.Jobtitle</td>
                    <td>@welcome.AgeRange</td>
                    <td>@welcome.StdHours</td>
                    <td>@welcome.HireDate</td>
                </tr>
            }
        }
           
    </table>
</div>