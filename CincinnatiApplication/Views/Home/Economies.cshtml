@{
    ViewData["Title"] = "Economy";
    var economy = (CincinnatiApplication.Models.Economy[])ViewData["Econ"];
}

<div class="container">
    <div class="mt-4 p-5 pb-3 bg-danger text-white rounded text-center">
        <h1 class="font-weight-bold jumboTitle">Economy</h1>
        <p>This is the Cincinnati Economy Page</p>

    </div>
    <table class="table table-dark table-hover text-center">
        <hr />
        <tr class="h4"><th>Project Name</th><th>Organization Legal name</th><th>Total Project Estimated Cost</th><th>Total Funding All Sources Estimate</th><th>Estimated Program total value</th><th>Site Street Address</th></tr>
        @{
            foreach (CincinnatiApplication.Models.Economy econ in economy)
            {
                <tr>
                    <td>@econ.ProjectName</td>
                    <td>@econ.OrganizationLegalName</td>
                    <td>@econ.TotalProjectCostEst</td>
                    <td>@econ.TotalFundingAllSourcesEst</td>
                    <td>@econ.EstProgramTotalValue</td>
                    <td>@econ.SiteStreetAddress</td>
                </tr>
            }
        }

    </table>
</div>
